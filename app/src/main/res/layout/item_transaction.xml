<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/transaction_card_background"
    android:elevation="4dp">

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/typeTextView"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="4dp"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/amountTextView"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="4dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:layout_below="@id/descriptionTextView"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="4dp"/>

    <ImageView
        android:id="@+id/editImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_toStartOf="@id/deleteImageView"
        android:layout_marginEnd="8dp"
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_delete_button_background"
        app:tint="@android:color/white"/>

    <ImageView
        android:id="@+id/deleteImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_delete_button_background"
        app:tint="@android:color/white"/>

</RelativeLayout>
